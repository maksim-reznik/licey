    def get_screen_size(self):
        screen = QtWidgets.QApplication.primaryScreen()  # –ü–æ–ª—É—á–∞–µ–º –æ—Å–Ω–æ–≤–Ω–æ–π —ç–∫—Ä–∞–Ω
        screen_size = screen.size()  # –ü–æ–ª—É—á–∞–µ–º —Ä–∞–∑–º–µ—Ä —ç–∫—Ä–∞–Ω–∞
        return screen_size.width(), screen_size.height()

