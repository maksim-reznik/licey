    def play_pause_audio(self):
        if hasattr(self, 'combined_audio') and self.combined_audio:
            play(self.combined_audio + (self.volume_slid if self.volume_slid != -10 else -100000))



    def set_volume(self):
        self.volume_slid = self.volume_slider.value()
        volume = self.volume_slider.value()  # –ü–æ–ª—É—á–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ –≥—Ä–æ–º–∫–æ—Å—Ç–∏ –æ—Ç 0 –¥–æ 100
        # –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∏–∫–æ–Ω–∫—É –≥—Ä–æ–º–∫–æ—Å—Ç–∏
        if volume >= 5:
            self.volume_label.setText('üîä')
        elif volume < 5 and volume > -10:
            self.volume_label.setText('üîà')
        else:
            self.volume_label.setText('üîá')

        self.volume.setText(str(volume * 100 // 10 + 100) + '%')

    def exit_application(self):
        reply = QMessageBox.question(self, '–í—ã—Ö–æ–¥', '–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ –≤—ã–π—Ç–∏?',
                                     QMessageBox.Yes | QMessageBox.No, QMessageBox.No)
        if reply == QMessageBox.Yes:
            self.close()


    def show_help(self):
        help_window = QtWidgets.QDialog(self)
        help_window.setWindowTitle("–°–ø—Ä–∞–≤–∫–∞")
        help_window.setGeometry(200, 200, 600, 400)

        # –°–æ–∑–¥–∞–µ–º —Ç–µ–∫—Å—Ç–æ–≤–æ–µ –ø–æ–ª–µ –¥–ª—è –æ–ø–∏—Å–∞–Ω–∏—è
        help_text = QtWidgets.QTextEdit(help_window)
        help_text.setGeometry(20, 20, 560, 320)
        help_text.setReadOnly(True)

        # –û–ø–∏—Å–∞–Ω–∏–µ —Ñ—É–Ω–∫—Ü–∏–π
        description = """
        –û–ø–∏—Å–∞–Ω–∏–µ —Ñ—É–Ω–∫—Ü–∏–π –ø—Ä–æ–≥—Ä–∞–º–º—ã:

        1. –î–æ–±–∞–≤–∏—Ç—å —Ñ–∞–π–ª
        - –ü–æ–∑–≤–æ–ª—è–µ—Ç –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –∞—É–¥–∏–æ —Ñ–∞–π–ª –≤ –ø—Ä–æ–≥—Ä–∞–º–º—É
        –ü–æ—Ç–æ–º –µ–≥–æ –º–æ–∂–Ω–æ –±—É–¥–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å –Ω–µ–æ–≥—Ä–∞–Ω–∏—á–µ–Ω–Ω–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ä–∞–∑

        2. –≠–∫—Å–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å —Ñ–∞–π–ª
        - –°–æ—Ö—Ä–∞–Ω—è–µ—Ç –≥–æ—Ç–æ–≤—ã–π –∑–≤—É–∫ –≤ –≤—ã–±—Ä–∞–Ω–Ω–æ–µ –º–µ—Å—Ç–æ –Ω–∞ –∫–æ–º–ø—å—é—Ç–µ—Ä–µ

        3. –î–æ–±–∞–≤–∏—Ç—å —Ñ–∞–π–ª –≤ –∫–æ–Ω–µ—Ü –∞—É–¥–∏–æ–¥–æ—Ä–æ–∂–∫–∏
        - –î–æ–±–∞–≤–ª—è–µ—Ç –≤—ã–±—Ä–∞–Ω–Ω—ã–π —Ñ–∞–π–ª –≤ –∫–æ–Ω–µ—Ü —Ç–µ–∫—É—â–µ–π –∞—É–¥–∏–æ–¥–æ—Ä–æ–∂–∫–∏.
        –¢–∞–∫ –∂–µ –æ–Ω –æ—Ç–æ–±—Ä–∞–∑–∏—Ç—Å—è –Ω–∞ –≥—Ä–∞—Ñ–∏–∫–µ –≤–Ω–∏–∑—É –ø—Ä–æ–≥—Ä–∞–º–º—ã

        4. –£–¥–∞–ª–∏—Ç—å –ø–æ—Å–ª–µ–¥–Ω–∏–π —Ñ–∞–π–ª —Å –∞—É–¥–∏–æ–¥–æ—Ä–æ–∂–∫–∏
        - –£–¥–∞–ª—è–µ—Ç –ø–æ—Å–ª–µ–¥–Ω–∏–π –¥–æ–±–∞–≤–ª–µ–Ω–Ω—ã–π –∞—É–¥–∏–æ —Ñ—Ä–∞–≥–º–µ–Ω—Ç
        –§–∞–π–ª —Ç–∞–∫ –∂–µ –∏—Å—á–µ–∑–Ω–µ—Ç –∏ —Å –≥—Ä–∞—Ñ–∏–∫–æ–≤

        5. –†–∞–∑–¥–µ–ª–∏—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–π —Ñ–∞–π–ª
        - –†–∞–∑–¥–µ–ª—è–µ—Ç –≤—ã–±—Ä–∞–Ω–Ω—ã–π –∞—É–¥–∏–æ —Ñ–∞–π–ª –Ω–∞ –¥–≤–µ —á–∞—Å—Ç–∏ –≤ —É–∫–∞–∑–∞–Ω–Ω–æ–π —Ç–æ—á–∫–µ
        –ü–æ–ª—É—á–µ–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã –æ—Ç–æ–±—Ä–∞–∑—è—Ç—Å—è –≤ –æ–∫–Ω–µ –ø–æ–ª—É—á–µ–Ω–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤ —Å —É–∫–∞–∑–∞–Ω–∏–µ–º –≤—Ä–µ–º–µ–Ω–∏ —Ä–∞–∑–¥–µ–ª–µ–Ω–∏—è –≤ –Ω–∞–∑–≤–∞–Ω–∏–∏
        
        6. –ù–∞ –ø—Ä–∞–≤–æ–π –≥—Ä–∞–Ω–∏—Ü–µ –æ–∫–Ω–∞ –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –∫–Ω–æ–ø–∫–∞ "–ò–≥—Ä–∞—Ç—å"
        –û–Ω–∞ –ø—Ä–æ–∏–≥—Ä—ã–≤–∞–µ—Ç –∞—É–¥–∏–æ—Ñ–∞–π–ª –∫–æ—Ç–æ—Ä—ã–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Å–æ–±—Ä–∞–ª
        –í–æ –≤—Ä–µ–º—è –ø—Ä–æ–∏–≥—Ä—ã–≤–∞–Ω–∏—è –∑–≤—É–∫–∞ –ø—Ä–æ–≥—Ä–∞–º–º–∞ –Ω–µ —Ä–µ–∞–≥–∏—Ä—É–µ—Ç –Ω–∞ –¥–µ–π—Å—Ç–≤–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∏ –º–æ–∂–µ—Ç 
        
